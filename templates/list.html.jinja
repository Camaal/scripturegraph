<!doctype html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;700;900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
<div class="container">
    <div class="sidenav">
        <div id="book">
            <h4>Book</h4>
            <ul>
                {% for book in bookDegrees %}
                <li>
                    {{book.book_name}} ({{book.total}})
                </li>
                {% endfor %}
            </ul>
        </div>
        <div id="chapter">
            <h4>Chapter</h4>
            <ul>
                {% for chapter in chapterDegrees %}
                <li>
                    {{chapter.chapter}} ({{chapter.total}})
                </li>
                {% endfor %}
            </ul>
        </div>
        <div id="author">
            <h4>Author</h4>
            <ul>
                {% for author in authorDegrees %}
                <li class="author">
                    <svg height="40" width="40">
                        <circle cx="20" cy="20" r="20" fill="#a1abb2"/>
                    </svg>
                    <div class="authorName">{{author.author}} ({{author.total}})</div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="parallel">
        <div class="verses">
            <h4>Verses</h4>
            <div>
                {% for i in range(1, dchapters)%}
                    <h4>Chapter {{i}}</h4>
                    {% for verse in dverses%}
                        {% if verse.chapter==i%}
                        <span class="scripture">
                                   <span>
                                      <span class="verse_num">{{verse.verse}}</span>
                                      {{verse.text}}
                                   </span>
                        </span>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <div class="verses">
            <h4>Gen 1:1 Cross-references</h4>
            <div>
               {% for b in tbooks %}
                   <h4>{{b.book_name}} {{b.chapter}}</h4>
                   {% for item in joins%}
                       {% if b.book == item.book %}
                           {% if b.chapter == item.chapter %}
                            <span class="scripture">
                                 <p>
                                    <span class="verse_num">{{item.verse}}</span>
                                    {{item.text}}
                                 </p>
                            </span>
                           {% endif %}
                       {% endif %}
                    {% endfor %}
               {% endfor %}
            </div>
        </div>
    </div>
</div>
</body>
</html>